<Window x:Class="EmploymentService.WindowChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmploymentService"
        mc:Ignorable="d"
        Title="Изменение пароля" Height="160" Width="250" ResizeMode="CanMinimize" Icon="images/Logo.png">
    <Grid>
        <Label Content="Введите новый пароль" Margin="40,10,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="157"/>
        <PasswordBox x:Name="PasswordBoxNewPassword" Margin="20,44,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="198"/>
        <Button x:Name="ButtonChangePassword" Content="Изменить" Margin="81,87,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Width="76" Click="ButtonChangePassword_Click"/>
    </Grid>
</Window>
