<Window x:Class="EmploymentService.WindowAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmploymentService"
        mc:Ignorable="d"
        Title="Служба занятости" Height="350" Width="400" ResizeMode="CanMinimize" Icon="images/Logo.png">
    <Grid>
        <Label Content="Служба занятости населения" Margin="72,10,0,0" FontSize="18" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="249"/>
        <Button x:Name="ButtonChangeEntryMethod" Content="Регистрация" Margin="280,267,0,0" VerticalAlignment="Top" Height="29" FontSize="14" HorizontalAlignment="Left" Width="94" Click="ButtonChangeEntryMethod_Click"/>
        <Label x:Name="LabelLogin" Content="Логин" HorizontalAlignment="Left" Margin="101,64,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="TextBoxLogin" HorizontalAlignment="Left" Height="23" Margin="167,67,0,0" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Label x:Name="LabelPassword" Content="Пароль" HorizontalAlignment="Left" Margin="92,104,0,0" VerticalAlignment="Top" FontSize="14"/>
        <PasswordBox x:Name="PasswordBoxPassword" HorizontalAlignment="Left" Margin="167,110,0,0" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <GroupBox x:Name="GroupBoxAccountType" Header="Тип аккаунта" HorizontalAlignment="Left" Height="64" Margin="140,145,0,0" VerticalAlignment="Top" Width="133" FontSize="14" Visibility="Hidden">
            <StackPanel HorizontalAlignment="Left" Height="35" Margin="3,4,0,-1" VerticalAlignment="Top" Width="121">
                <RadioButton x:Name="RadioButtonEmployee" Content="Соискатель" HorizontalAlignment="Left" Width="111" FontSize="14" IsChecked="True"/>
                <RadioButton x:Name="RadioButtonOrganization" Content="Организация" HorizontalAlignment="Left" Width="111" FontSize="14"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="ButtonEntryMethodGo" Content="Авторизоваться" Margin="134,155,0,0" VerticalAlignment="Top" Height="29" FontSize="14" HorizontalAlignment="Left" Width="140" Click="ButtonEntryMethodGo_Click"/>
        <Button x:Name="ButtonAuthorizationCancel" Content="Пропустить авторизацию" Margin="116,202,0,0" VerticalAlignment="Top" Height="29" FontSize="14" HorizontalAlignment="Left" Width="179" Click="ButtonAuthorizationCancel_Click"/>


    </Grid>
</Window>
