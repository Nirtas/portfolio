<Window x:Class="EmploymentService.WindowVacancies"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmploymentService"
        mc:Ignorable="d"
        Title="Служба занятости" Height="810" Width="830" ResizeMode="CanMinimize" Icon="images/Logo.png">
    <Grid>
        <Grid Margin="0,0,0,490">
            <Label Content="Служба занятости населения" Margin="278,10,0,0" VerticalAlignment="Top" FontSize="18" HorizontalAlignment="Left" Width="249"/>
            <Button x:Name="ButtonBack" Content="Назад" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="66" Height="31" FontSize="14" Visibility="Visible" Click="ButtonBack_Click"/>
            <Label Content="Поиск вакансий" Margin="278,49,0,0" VerticalAlignment="Top" FontSize="18" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="249"/>
        </Grid>

        <ScrollViewer Visibility="Visible" Margin="0,91,0,0">
            <Grid x:Name="GridVacancies" Height="680">
                <Grid x:Name="GridFilters">
                    <GroupBox x:Name="GroupBoxVacanciesTable" Header="Поиск" HorizontalAlignment="Left" Height="64" Margin="433,162,0,0" VerticalAlignment="Top" Width="220" FontSize="14" Visibility="Visible">
                        <StackPanel HorizontalAlignment="Left" Height="35" Margin="3,4,0,-1" VerticalAlignment="Top" Width="221">
                            <RadioButton x:Name="RadioButtonCurrentVacancies" Content="По действующим вакансиям" HorizontalAlignment="Left" Width="211" FontSize="14" IsChecked="True"/>
                            <RadioButton x:Name="RadioButtonArchiveVacancies" Content="По архиву" HorizontalAlignment="Left" Width="211" FontSize="14"/>
                        </StackPanel>
                    </GroupBox>

                    <Label Content="Сфера деятельности" HorizontalAlignment="Left" Margin="42,18,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboBoxActivityFields" HorizontalAlignment="Left" Margin="42,52,0,0" VerticalAlignment="Top" Width="343" FontSize="14" IsTextSearchEnabled="False"/>

                    <Label Content="Режим работы" HorizontalAlignment="Left" Margin="42,83,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboBoxOperatingModes" HorizontalAlignment="Left" Margin="42,117,0,0" VerticalAlignment="Top" Width="343" FontSize="14" IsTextSearchEnabled="False"/>

                    <Label Content="Характер работы" HorizontalAlignment="Left" Margin="42,149,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboBoxWorkNatures" HorizontalAlignment="Left" Margin="42,183,0,0" VerticalAlignment="Top" Width="343" FontSize="14" IsTextSearchEnabled="False"/>

                    <Label Content="Организация" HorizontalAlignment="Left" Margin="433,18,0,0" VerticalAlignment="Top" FontSize="14" RenderTransformOrigin="0.553,0.414" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboBoxOrganizations" Margin="433,52,0,0" VerticalAlignment="Top" FontSize="14" IsTextSearchEnabled="False" HorizontalAlignment="Left" Width="343"/>

                    <Label Content="Должность" HorizontalAlignment="Left" Margin="433,83,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <ComboBox x:Name="ComboBoxPosts" Margin="433,117,0,0" VerticalAlignment="Top" FontSize="14" IsTextSearchEnabled="False" HorizontalAlignment="Left" Width="343"/>

                    <Button x:Name="ButtonResetFilters" Content="Сбросить фильтры" Margin="42,230,0,0" VerticalAlignment="Top" Height="31" FontSize="14" Visibility="Visible" HorizontalAlignment="Left" Width="136" Click="ButtonResetFilters_Click"/>

                    <Button x:Name="ButtonSearchVacancies" Content="Искать" Margin="371,251,0,0" VerticalAlignment="Top" Height="31" FontSize="14" Visibility="Visible" HorizontalAlignment="Left" Width="66" Click="ButtonSearchVacancies_Click"/>
                </Grid>

                <Grid x:Name="GridVacancy" Visibility="Hidden">
                    <Label x:Name="LabelCountVacancies" Content="Найдено вакансий: 0" Margin="332,311,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left"/>
                    <Button x:Name="ButtonPrevVacancy" Content="Назад" Margin="62,309,0,0" VerticalAlignment="Top" Height="31" FontSize="14" Visibility="Hidden" HorizontalAlignment="Left" Width="66" Click="ButtonPrevVacancy_Click"/>
                    <Button x:Name="ButtonNextVacancy" Content="Вперед" Margin="153,309,0,0" VerticalAlignment="Top" Height="31" FontSize="14" Visibility="Visible" HorizontalAlignment="Left" Width="66" RenderTransformOrigin="0.545,0.516" Click="ButtonNextVacancy_Click"/>

                    <Button x:Name="ButtonVacancyApplicationStatus" Content="Оставить заявку на вакансию" Margin="571,309,0,0" VerticalAlignment="Top" Height="31" FontSize="14" Visibility="Visible" HorizontalAlignment="Left" Width="203" Click="ButtonVacancyApplicationStatus_Click"/>
                    <Label x:Name="LabelVacancyArchiveDate" Content="Вакансия в архиве с" Margin="448,438,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left" Visibility="Hidden" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxVacancyArchiveDate" HorizontalAlignment="Left" Height="23" Margin="605,442,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" FontSize="14" Visibility="Hidden" IsReadOnly="True"/>

                    <Border BorderBrush="Black" BorderThickness="1" Margin="40,353,0,0" Height="562" VerticalAlignment="Top" HorizontalAlignment="Left" Width="734"/>

                    <Label x:Name="LabelNumVacancy" Content="Вакансия 1" Margin="364,372,0,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Left"/>
                    <Label Content="Должность" HorizontalAlignment="Left" Margin="66,413,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxPost" HorizontalAlignment="Left" Height="23" Margin="66,442,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Сфера деятельности" HorizontalAlignment="Left" Margin="66,485,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxActivityField" HorizontalAlignment="Left" Height="23" Margin="66,514,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" IsReadOnly="True"/>
                    <Label x:Name="LabelNumFreeSeats" Content="Кол-во свободных мест" HorizontalAlignment="Left" Margin="448,438,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxNumFreeSeats" HorizontalAlignment="Left" Height="23" Margin="627,442,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Характер работы" HorizontalAlignment="Left" Margin="66,627,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxWorkNature" HorizontalAlignment="Left" Height="23" Margin="66,656,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Организация" HorizontalAlignment="Left" Margin="448,482,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxOrganization" HorizontalAlignment="Left" Height="23" Margin="448,511,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Режим работы" HorizontalAlignment="Left" Margin="448,549,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxOperatingMode" HorizontalAlignment="Left" Height="23" Margin="448,578,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Оплата (руб.)" HorizontalAlignment="Left" Margin="448,627,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxPayment" HorizontalAlignment="Left" Height="23" Margin="448,656,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Телефон" HorizontalAlignment="Left" Margin="613,627,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxPhone" HorizontalAlignment="Left" Height="23" Margin="613,656,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Город" HorizontalAlignment="Left" Margin="66,558,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxCity" HorizontalAlignment="Left" Height="23" Margin="66,587,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Требования к кандидатам" HorizontalAlignment="Left" Margin="66,706,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxReqCandidates" HorizontalAlignment="Left" Height="150" Margin="66,735,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" IsReadOnly="True"/>
                    <Label Content="Требуемый опыт работы" HorizontalAlignment="Left" Margin="448,706,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox x:Name="TextBoxReqWorkExp" HorizontalAlignment="Left" Height="150" Margin="448,735,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="14" IsReadOnly="True"/>
                </Grid>

                <Label x:Name="LabelVacanciesNotFound" Content="Вакансии не найдены" Margin="319,340,0,0" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left" Width="169" Visibility="Hidden"/>

            </Grid>
        </ScrollViewer>
    </Grid>

</Window>
