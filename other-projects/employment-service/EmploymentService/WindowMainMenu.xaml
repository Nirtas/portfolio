<Window x:Class="EmploymentService.WindowMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmploymentService"
        mc:Ignorable="d"
        Title="Служба занятости" Height="350" Width="550" ResizeMode="CanMinimize" Icon="images/Logo.png">
    <Grid>
        <Label Content="Служба занятости населения" Margin="148,10,0,0" VerticalAlignment="Top" FontSize="18" HorizontalAlignment="Left" Width="249"/>
        <Label Content="Главное меню" Margin="148,49,0,0" VerticalAlignment="Top" FontSize="18" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="249"/>
        <Button x:Name="ButtonExit" Content="Выйти" Margin="10,10,0,0" VerticalAlignment="Top" Height="31" FontSize="14" HorizontalAlignment="Left" Width="66" Click="ButtonExit_Click"/>
        <Button x:Name="ButtonProfile" Margin="494,10,0,0" VerticalAlignment="Top" Height="31" FontSize="14" Padding="0" BorderThickness="0" Visibility="Hidden" Click="ButtonProfile_Click" HorizontalAlignment="Left" Width="30">
            <Button.Background>
                <ImageBrush ImageSource="images/avatar.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonSearchVacancies" Content="Поиск вакансий" Margin="209,110,0,0" VerticalAlignment="Top" Height="31" FontSize="14" HorizontalAlignment="Left" Width="126" Click="ButtonSearchVacancies_Click"/>
        <Label x:Name="LabelUnregisteredUser" Margin="133,163,0,0" FontSize="16" Height="65" VerticalAlignment="Top" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Width="278" Visibility="Hidden">
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="Авторизуйтесь, чтобы пользоваться полноценным функционалом" TextAlignment="Center"/>
            </Label.Content>
        </Label>
        <Button x:Name="ButtonChangePassword" Content="Сменить пароль" Margin="209,163,0,0" VerticalAlignment="Top" Height="31" FontSize="14" HorizontalAlignment="Left" Width="126" Click="ButtonChangePassword_Click" Visibility="Hidden"/>

    </Grid>
</Window>
